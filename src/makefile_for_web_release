# this came from https://gist.github.com/maxtruxa/4b3929e118914ccef057f8a05c614b0f

# output binary
BIN := web_release.js

# source files
SRCS := \
    main_for_release.cpp \
    configuration.cpp \
    tinyutf8.cpp \
    Bubbles.cpp \
    GlContext.cpp \
    App.cpp \
    Window.cpp \
    TextTextureAtlas.cpp \
    TextLayout.cpp \
    MouseEvents.cpp \
    RedrawRequests.cpp \
    Workspace.cpp \
    PanningBar.cpp \
    DataTextures.cpp

# files included in the tarball generated by 'make dist' (e.g. add LICENSE file)
DISTFILES := $(BIN)

# filename of the tar archive generated by 'make dist'
DISTOUTPUT := $(BIN).tar.gz

# intermediate directory for generated object files
OBJDIR := .o_web_release
# intermediate directory for generated dependency files
DEPDIR := .d_web_release

# object files, auto generated from source files
OBJS := $(patsubst %,$(OBJDIR)/%.o,$(basename $(SRCS)))
# dependency files, auto generated from source files
DEPS := $(patsubst %,$(DEPDIR)/%.d,$(basename $(SRCS)))

# compilers (at least gcc and clang) don't create the subdirectories automatically
$(shell mkdir -p $(dir $(OBJS)) >/dev/null)
$(shell mkdir -p $(dir $(DEPS)) >/dev/null)

EXPORTS_FILE=exports_for_web.txt

OPTIMIZATION_LEVEL=-O0

# C compiler
CC := emcc $(OPTIMIZATION_LEVEL) -s USE_WEBGL2=1 -s FULL_ES3=1 -s USE_GLFW=3 -s EXPORTED_FUNCTIONS=@$(EXPORTS_FILE) -s EXTRA_EXPORTED_RUNTIME_METHODS=["_cwrap"] -Iinclude/           -s ASSERTIONS=1 -s DEMANGLE_SUPPORT=1

# C++ compiler
CXX := emcc
# linker
LD := emcc $(OPTIMIZATION_LEVEL) -s USE_WEBGL2=1 -s FULL_ES3=1 -s USE_GLFW=3 -s EXPORTED_FUNCTIONS=@$(EXPORTS_FILE) -s EXTRA_EXPORTED_RUNTIME_METHODS='["cwrap"]'                     -s ASSERTIONS=1 -s DEMANGLE_SUPPORT=1

# tar
TAR := tar

# C flags
CFLAGS := -std=c11
# C++ flags
CXXFLAGS := -std=c++11
# C/C++ flags
CPPFLAGS := -g -Wall -Wextra -pedantic -Wfatal-errors
#*** debug
# linker flags
LDFLAGS :=
# flags required for dependency generation; passed to compilers
DEPFLAGS = -MT $@ -MD -MP -MF $(DEPDIR)/$*.Td

# compile C source files
COMPILE.c = $(CC) $(DEPFLAGS) $(CFLAGS) $(CPPFLAGS) -c -o $@
# compile C++ source files
COMPILE.cc = $(CXX) $(DEPFLAGS) $(CXXFLAGS) $(CPPFLAGS) -c -o $@
# link object files to binary
LINK.o = $(LD) $(LDFLAGS) $(LDLIBS) -o $@
# precompile step
PRECOMPILE =
# postcompile step
POSTCOMPILE = mv -f $(DEPDIR)/$*.Td $(DEPDIR)/$*.d

all: $(BIN) move open

dist: $(DISTFILES)
	$(TAR) -cvzf $(DISTOUTPUT) $^

ifeq ($(OPTIMIZATION_LEVEL),-O2)
MOVETORELEASEDIR := mv web_release.js web_release.js.mem ../web_version/
else
MOVETORELEASEDIR := mv web_release.js ../web_version/
endif

OPENINFIREFOX = firefox ../web_version/index.html
#OPENINFIREFOX = google-chrome-stable ../web_version/index.html

.PHONY: move
move:
	$(MOVETORELEASEDIR)

.PHONY: open
open:
	$(OPENINFIREFOX)

.PHONY: clean
clean:
	$(RM) -r $(OBJDIR) $(DEPDIR)
	$(RM) ../web_release/web_release.js*

.PHONY: distclean
distclean: clean
	$(RM) $(BIN) $(DISTOUTPUT)

.PHONY: install
install:
	@echo no install tasks configured

.PHONY: uninstall
uninstall:
	@echo no uninstall tasks configured

.PHONY: check
check:
	@echo no tests configured

.PHONY: help
help:
	@echo available targets: all dist clean distclean install uninstall check

$(BIN): $(OBJS)
	$(LINK.o) $^

$(OBJDIR)/%.o: %.c
$(OBJDIR)/%.o: %.c $(DEPDIR)/%.d
	$(PRECOMPILE)
	$(COMPILE.c) $<
	$(POSTCOMPILE)

$(OBJDIR)/%.o: %.cpp
$(OBJDIR)/%.o: %.cpp $(DEPDIR)/%.d
	$(PRECOMPILE)
	$(COMPILE.cc) $<
	$(POSTCOMPILE)

$(OBJDIR)/%.o: %.cc
$(OBJDIR)/%.o: %.cc $(DEPDIR)/%.d
	$(PRECOMPILE)
	$(COMPILE.cc) $<
	$(POSTCOMPILE)

$(OBJDIR)/%.o: %.cxx
$(OBJDIR)/%.o: %.cxx $(DEPDIR)/%.d
	$(PRECOMPILE)
	$(COMPILE.cc) $<
	$(POSTCOMPILE)

.PRECIOUS = $(DEPDIR)/%.d
$(DEPDIR)/%.d: ;

-include $(DEPS)